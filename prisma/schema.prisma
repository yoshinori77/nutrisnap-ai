generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model ChatHistory {
  id         String   @id @default(uuid()) @db.Uuid
  user_id    String   @default(uuid()) @db.Uuid
  message    String
  role       String
  created_at DateTime @default(now())
  thread_id  String   @default(uuid())

  @@map("chat_history")
}

model Upload {
  id          String   @id @default(uuid()) @db.Uuid
  user_id     String   @default(uuid()) @db.Uuid
  image_data  String
  ai_response String
  created_at  DateTime @default(now())

  @@map("upload")
}
